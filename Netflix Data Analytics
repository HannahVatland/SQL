# THis first 3 lines are me just looking at everything in the tables. 
SELECT count(*) FROM "netflix_people"
select count(*) FROM "netflix_titles_info"
select * FROM "netflix_titles_info" LIMIT 5

#Join the titles and people tables
select people.show_id
, people.director
,titles.title
, titles.type
from "netflix_people" people
  left join "netflix_titles_info" titles
  on people.show_id = titles.show_id

# How many movie titles are in the database?
select count(*)
from "netflix_titles_info"
where type = 'Movie'
;

#When was the most recent batch of movies and tv shows added to the database?
select max(date(date_added))
from "netflix_titles_info";

# List all the tv shows and movies in alphabetical order
select title 
from "netflix_titles_info"
order by title asc;

# Who is the director of the movie The Starling?
select director 
from "netflix_titles_info" titles
left join "netflix_people" people
on titles.show_id = people.show_id
where titles.title = 'The Starling'

# What is the oldest movie in the database and what was its release year?
select title, release_year
from "netflix_titles_info"
where type = 'Movie'
order by release_year asc
limit 1
